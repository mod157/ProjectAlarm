<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_gravity="left"
            android:layout_weight="1">

            <TextView
                android:text="08:00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="월"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_day_mon"
                    android:layout_weight="1"
                    android:padding="2dp" />
                <TextView
                    android:text="화"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_day_tue"
                    android:layout_weight="1"
                    android:padding="2dp" />
                <TextView
                    android:text="수"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_day_wednes"
                    android:layout_weight="1"
                    android:padding="2dp" />
                <TextView
                    android:text="목"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_day_thurs"
                    android:layout_weight="1"
                    android:padding="2dp" />
                <TextView
                    android:text="금"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_day_fri"
                    android:layout_weight="1"
                    android:padding="2dp" />
                <TextView
                    android:text="토"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_day_satur"
                    android:layout_weight="1"
                    android:padding="2dp" />
                <TextView
                    android:text="일"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_day_sun"
                    android:layout_weight="1"
                    android:padding="2dp" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="right|center"
            android:padding="10dp"
            android:layout_weight="1.2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/edit_img32"
                android:id="@+id/iv_edit"
                android:layout_weight="1"
                android:elevation="1dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/delete_img32"
                android:id="@+id/iv_delete"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@drawable/line"
        android:layout_height="5dp">

    </FrameLayout>

</LinearLayout>