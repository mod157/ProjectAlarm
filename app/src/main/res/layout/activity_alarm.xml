<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alarm"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nammu.sunjae.projectalarm.AlarmActivity"
    android:background="#55ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:elevation="1dp"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_View_Time"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@android:color/background_dark"
            android:textStyle="normal|bold"
            android:textSize="90dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_View_DetailTime"
            android:gravity="center"
            android:text="월 일 요일"
            android:textColor="@android:color/background_dark"
            android:textSize="20dp" />

        <TextView
            android:text="타이틀"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_View_Text"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:layout_margin="20dp"
            android:textSize="20dp" />
        <TextView
            android:text="주소"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_View_Location"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_margin="20dp"

            android:visibility="gone"
            android:id="@+id/weather_linear">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/summer"
                android:id="@+id/img_weather"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1">

                <TextView
                    android:text="온도"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_weather_temp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:gravity="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="30dp" />
                <TextView
                    android:text="날씨"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_weather_wf"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:gravity="center"
                    android:textColor="@android:color/background_dark" />
                <TextView
                    android:text="강수확률"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_weather_pop"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:gravity="center"
                    android:textColor="@android:color/background_dark" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="bottom">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/success"
            android:id="@+id/img_View_Click"
            android:scaleType="fitCenter"
            android:padding="10dp" />

        <TextView
            android:text="클릭하면 종료됩니다."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:padding="10dp"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" />
    </LinearLayout>

</LinearLayout>
